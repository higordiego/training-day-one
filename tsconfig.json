{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Diretório de saída dos arquivos compilados
    "rootDir": "./src"   // Diretório onde os arquivos TypeScript estão localizados
  },
  "include": [
    "src/**/*.ts"
  ]
}